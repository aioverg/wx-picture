<!--pages/details/details.wxml-->
<view class="details">
  <view>
    <swiper
      bindchange="bindchange"
      indicator-dots="true"
      circular="true"
      style="height:{{imgsHeight[current]}}rpx;"
    >
      <block wx:for="{{imgCollectionList}}" wx:key="index">
        <swiper-item>
          <image
            mode="widthFix"
            class="img"
            data-id="{{index}}"
            src="{{item.cover}}"
            bindload="imageLoad"
          ></image>
        </swiper-item>
      </block>
    </swiper>
    <view>
      <like-info id="like-info" imgData="{{imgCollectionList}}" imgIndex="{{current}}" />
      <share-info />
    </view>
  </view>
  <view>
    <water-fall
      id="water-fall"
      toUrl="{{toUrl}}"
      imgList="{{imgList}}"
    ></water-fall>
  </view>
</view>
