/* components/navBar/navBar.wxss */
.nav-bar {
  display: flex;
  justify-content: space-around;
  height: 55px;
}
.nav-bar .content {
  display: inline-block;
  width: 50px;
}
.nav-bar .img {
  padding: 5px 12.5px 0;
  width: 25px;
  height: 25px;
}
.nav-bar .text {
  font-size: 15px;
  display: inline-block;
  text-align: center;
  width: 30px;
  padding: 0 10px;
  position: relative;
  top: -5px;
}